  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start App",
      "type": "node",
      "request": "launch",
      "args": [
        "package",
        "start"
      ],
      "cwd": "${workspaceFolder}/packages/app",
      "program": "${workspaceFolder}/node_modules/.bin/backstage-cli",
      "env": {},
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Start Backend",
      "type": "node",
      "request": "launch",
      "args": [
        "package",
        "start"
      ],
      "cwd": "${workspaceFolder}/packages/backend",
      "program": "${workspaceFolder}/node_modules/.bin/backstage-cli",
      "env": {
        "LOG_LEVEL": "debug",
        "NODE_OPTIONS": "--no-node-snapshot"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal"
    },
  ]
}